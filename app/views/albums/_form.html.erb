    <label>What's the album title?</label>
    <%= f.text_field :name %>

    <label>What label was the album released on?</label>
	<% label_name = @album.label.name rescue nil %>
    <%= text_field_with_auto_complete :label, :name, :value => label_name %>

    <label>When was it released? <br /><small>If the exact date is not known, just get as close as you can.</small></label>
    <%= f.date_select :release_date, :date_separator => " / ", :start_year => 1900, :end_year => DateTime.now.year + 2 %>

	<% if @album.art? %>
		<label>Current album cover</label>
		<%= image_tag @album.art.url(:frontlist) %>
		<p><label>Delete this cover and upload a new one?</label>
		<small>Just leave this field blank if the current album cover is fine</small><br />
	<% else %>
		<label>Upload a picture for album art:</label>
	<% end %>
	<%= f.file_field :art %>
	
