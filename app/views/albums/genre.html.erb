<%= title "Genre", :h2 %>

<%= will_paginate @albums %>

<% @bands = @albums.group_by { |a| a.artist } unless @albums.nil? %>
<% unless @bands.nil? %>
	<dl>
	<% @bands.keys.sort.each do |band| %>
		<dt><%= link_to band.name, artist_path(band) %></dt>
		<% for album in band.albums %>
			<dd><%= link_to album.name, album_path(album) %></dd>
		<% end %>
	<% end %>
	</dl>
<% end %>

<%= will_paginate @albums %>

