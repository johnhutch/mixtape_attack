<%= title "Editing " + @album.name, :h2 %>

<% form_for(@album, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

	<%= render :partial => 'form', :locals => {:f => f} %>

  <p>
    <%= f.submit "Save my changes" %>
  </p>
	
<% end %>

<%= link_to 'Nevermind, take me back to ' + @album.name, album_path(@album) %>
