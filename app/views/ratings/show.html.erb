<p>
  <b>User:</b>
  <%=h @rating.user_id %>
</p>

<p>
  <b>Album:</b>
  <%=h @rating.album_id %>
</p>

<p>
  <b>Score:</b>
  <%=h @rating.score %>
</p>

<%= title artist_album(@album) + "review", :h2 %>

<div id="album_header" class="clearfix">
	<div id="albumart" class="column span-5 append-1">
		<%= image_tag @rating.album.art.url(:show) %>
	</div>
 
	<div id="albuminfo" class="column span-13 append-1">
		<div id="label">Released by <%= @rating.album.label.name unless @rating.album.label.nil? %> on <%= @album.release_date.strftime('%B %e, %Y') %></div>
		<div id="genres">Genres: 
			<% for tag in @rating.album.tags %>
				<%= link_to tag, genre_album_path(tag.name) %>
			<% end %>
		</div>
		
	</div>

	<div id="scores" class="column span-4 last">
		<%= sprintf ("%.1f", @album.score) %>
	</div>
</div>

<div id="album_reviews">
	<% @album.reviews.each_with_index do |review, i| %>
		<div class="album_review column span-8 <%= i%3 == 0 ? "" : "last" %>">
			<div class="rating"><%= review.score %></div>
			<div class="byline">Reviewed by <%= review.user.name %></div>
			<div class="body"><%= review.tweet %></div>
			<div class="readmore"><%= link_to 'Read More &gt;', review_path(review) %></div>
		</div>
	<% end %>
</div>